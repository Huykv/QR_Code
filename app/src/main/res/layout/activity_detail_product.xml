<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="10dp">

    <Button
        android:id="@+id/buttonBackDetail"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/lightBlue"
        android:text="Back"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/scrollView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginRight="5dp"
        android:backgroundTint="@color/lightBlue"
        android:text="Xoá"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/scrollView5"
        app:layout_constraintEnd_toStartOf="@+id/buttonEdit"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonEdit"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/lightBlue"
        android:text="Sửa"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/scrollView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:id="@+id/scrollView5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="15dp"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/imageViewDetail"
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/lightBlue"
                    android:padding="10dp"
                    tools:srcCompat="@android:drawable/ic_menu_gallery" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textViewDetailName"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Name Product"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDetailPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Price"
                android:textSize="25dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textViewDetailFlavor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Hương vị:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextDetailFlavor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:hint="Hương vị" />

            <TextView
                android:id="@+id/textViewDetailBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Thương hiệu:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextDetailBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:hint="Thương hiệu"/>

            <TextView
                android:id="@+id/textViewDetailOrigin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Xuất xứ:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextDetailOrigin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:hint="Xuất xứ"/>

            <TextView
                android:id="@+id/textViewDetailIngredient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thành phần:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextDetailIngredient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:hint="Thành phần"/>

            <TextView
                android:id="@+id/textViewDetailDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Mô tả:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextDetailDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:hint="Mô tả"/>

            <TextView
                android:id="@+id/textViewDetailPack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đóng gói:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextDetailPack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:hint="Đóng gói"/>

            <TextView
                android:id="@+id/textViewDetailUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Đơn vị:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextDetailUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:hint="Đơn vị"/>

            <TextView
                android:id="@+id/textViewDetailCapacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Dung tích:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextDetailCapacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:hint="Dung tích"/>

            <TextView
                android:id="@+id/textViewDetailWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Khối lượng:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextDetailWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:hint="Khối lượng"/>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>