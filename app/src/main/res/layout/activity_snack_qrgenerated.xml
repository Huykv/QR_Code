<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBlue"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonBackGenerate"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:backgroundTint="#ffffff"
        android:text=" Back"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/taoRa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/taoRa" />

    <TextView
        android:id="@+id/taoRa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Đồ ăn vặt"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taoRa">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                app:cardCornerRadius="15dp"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/imageViewGenerate"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    app:srcCompat="@android:drawable/ic_menu_gallery" />

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/buttonSelectImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Chọn ảnh"
                android:layout_gravity="center"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/snack_tenSP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/snack_thanhPhan"
                android:layout_marginTop="15dp"
                android:hint="Nhập tên"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/snack_giaThanh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/snack_xuatsuSP"
                android:layout_marginTop="15dp"
                android:hint="Nhập giá"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/snack_huongVi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/snack_giaThanh"
                android:layout_marginTop="15dp"
                android:hint="Nhập hương vị"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/snack_thuongHieu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/snack_maSP_maSP"
                android:layout_marginTop="15dp"
                android:hint="Nhập thương hiệu"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/snack_xuatsuSP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/snack_tenSP"
                android:layout_marginTop="15dp"
                android:hint="Nhập xuất xứ"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/snack_moTaSP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/snack_thuongHieu_thuongHieu"
                android:layout_marginTop="15dp"
                android:hint="Nhập mô tả"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/snack_thanhPhan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/snack_moTaSP"
                android:layout_marginTop="15dp"
                android:hint="Nhập thành phần"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/snack_khoiLuong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/snack_loaiSP"
                android:layout_marginTop="15dp"
                android:hint="Nhập khối lượng"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/buttonGenerate"
                android:layout_width="209dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:text="Generated"
                android:textColor="@color/black" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewQR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:id="@+id/qr_code"
                    android:layout_width="400dp"
                    android:layout_height="350dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter" />

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/buttonIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="In"
                android:textColor="#000000"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>