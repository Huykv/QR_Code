<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@color/lightBlue"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/backButton_qrgenerated"
        android:layout_margin="5dp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/back_button"
        android:onClick="onImageButtonClicked" />


    <TextView
        android:id="@+id/taoRa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Tạo ra"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        ></TextView>

    <EditText
        android:id="@+id/tpKho_maSP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/taoRa"
        android:layout_marginTop="20dp"
        android:hint="Nhập mã sản phẩm"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/tpKho_tenSP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tpKho_maSP"
        android:layout_marginTop="15dp"
        android:hint="Nhập tên sản phẩm"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/tpKho_kichCoSP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tpKho_tenSP"
        android:layout_marginTop="15dp"
        android:hint="Nhập kích cỡ sản phẩm"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/tpKho_giaSP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tpKho_kichCoSP"
        android:layout_marginTop="15dp"
        android:hint="Nhập giá thành sản phẩm"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/tpKho_xuatXuSP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tpKho_giaSP"
        android:layout_marginTop="15dp"
        android:hint="Nhập xuất xứ sản phẩm"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/tpKho_soLuongSP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tpKho_xuatXuSP"
        android:layout_marginTop="15dp"
        android:hint="Nhập số lượng sản phẩm"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/buttonGenerate"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tpKho_soLuongSP"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="94dp"
        android:textColor="@color/black"
        android:text="Generated" />

    <ImageView
        android:id="@+id/qr_code"
        android:layout_width="match_parent"
        android:layout_height="569dp"
        android:layout_below="@+id/buttonGenerate"
        android:layout_marginTop="15dp"
        android:scaleType="fitCenter"/>

</RelativeLayout>
